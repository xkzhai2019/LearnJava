package com.xkzhai.archiver;

import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.io.FileOutputStream;

public class Archiver {
	/**
	 * 创建归档文件
	 */
	public void newArachiverFile(String[] srcPaths,String yarPath){
		try {
			FileOutputStream fout = new FileOutputStream(yarPath);
			for(String srcPath: srcPaths){
				// 向yar归档文件中添加文件
				addFile(srcPath,fout);
			}
		} catch (FileNotFoundException e) {
			e.printStackTrace();
		}
		
	}
	
	/**
	 * 向yar归档文件中添加文件
	 * @param srcPath
	 * @param fout
	 * @throws Exception 
	 */
	private void addFile(String srcPath, FileOutputStream fout){

		try {
			//1. 取出srcPath文件类型
			int fType = getFileType(srcPath);
			
			//2. 取出srcPath文件长度
			FileInputStream fin = new FileInputStream(srcPath);
			int length = fin.available();
			
			//3. 将fType写入fout
			byte bFtype = (byte)fType;
			fout.write(new byte[]{bFtype});
			
			//4. 将长度写入fout
			byte[] bytes = int2byteArr(length);
			
		} catch (Exception e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
	}
	/**
	 * 将整数转换为字节数组
	 * @param length
	 * @return
	 */
	private byte[] int2byteArr(int length) {
		
		return null;
	}

	/**
	 * 得到文件类型
	 * 0-txt
	 * 1-jpg
	 * 2-avi
	 * 3-gif
	 * @param srcPath
	 * @return
	 */
	private int getFileType(String srcPath) {
		String ext = srcPath.substring(srcPath.lastIndexOf(".")).toLowerCase();
		if(".txt".equals(ext)){
			return 0;
		}
		else if(".jpg".equals(ext)){
			return 1;
		}
		else if(".avi".equals(ext)){
			return 2;
		}
		else if(".gif".equals(ext)){
			return 3;
		}
		return -1;
	}
}
