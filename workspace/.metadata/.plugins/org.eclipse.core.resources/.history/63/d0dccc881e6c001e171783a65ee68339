package com.xkzhai.deepcopy;

import java.awt.Color;
import java.awt.Font;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JTextArea;

/**
 * 主窗口
 * @author Administrator
 *
 */
public class MainFrame extends JFrame {

	private static final long serialVersionUID = 5867166639769467858L;
	public MainFrame(){
		initFrame();
		this.setVisible(true);
	}
	
	/**
	 * 初始化
	 */
	private void initFrame() {
		//标题
		this.setTitle("主窗口");
		
		// 边界
		this.setBounds(100, 100, 900, 600);

		this.setLayout(null);
		
		Font font = new Font("宋体",Font.BOLD,27);
		// 文本域 
		JTextArea txtArea = new JTextArea();
		txtArea.setBounds(0, 0, 800, 500);
		txtArea.setFont(font);
		txtArea.setBackground(Color.GRAY);
		txtArea.setBackground(new Color(0xff,0,0,255));
		this.add(txtArea);
		
		// 确定按钮
		JButton btnOK = new JButton("确定");
		btnOK.setBounds(600, 510, 100, 50);
		btnOK.setFont(font);
		this.add(btnOK);
		
		// 取消按钮
		JButton btnCancel = new JButton("取消");
		btnOK.setBounds(710, 510, 100, 50);
		this.add(btnCancel);
	}
	
	


}
