package com.xkzhai.io;

import java.io.File;
import java.io.RandomAccessFile;

public class MulThreadCopyFile {
	
	public static int i = 0;
	public static int block = 0;
	public static void main(String[] args) {
		// 源文件
		File srcFile = new File("dupliFile.txt");
		int srcLength = (int)srcFile.length();
		// 目标文件
		File destFile = new File("MulThreadCopyFile.txt");
		RandomAccessFile raf = new RandomAccessFile(destFile,"rw");
		raf.setLength((long)srcLength);
		
		// 使用线程数
		int count = 3;
		// 计算每个线程复制的文件块大小
		block = 0;
		if(srcLength % count == 0){
			block = srcLength / count;
		}
		else{
			block = srcLength / count +1;
		}
		// 开启count个线程
		for(i=0;i<count;i++){
			new Thread(){
				public void run() {
					int start = i*block;
					int end = 0;
					// 是否是最后一个线程
					if(i!=(count-1)){
						end = (i+1)*block - 1;
					}else{
						end = srcLength - 1;
					}
				}
			}.start();
		}
		
	}

}
