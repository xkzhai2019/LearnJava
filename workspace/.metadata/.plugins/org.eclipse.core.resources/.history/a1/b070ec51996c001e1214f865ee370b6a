package com.xkzhai.mulcopier;

import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JTextField;

/**
 * 主窗口
 * @author Administrator
 *
 */
public class CopyUI extends JFrame{

	private static final long serialVersionUID = 6189847546972653742L;
	// srcFile
	private JLabel lblSrcFile;
	private JTextField tfSrcFile;
	
	// destDir
	private JLabel lblDestDir;
	private JTextField tfDestDir;
	
	public CopyUI(){
		init();
	}
	private void init() {
		this.setTitle("主窗口");
		this.setBounds(100, 100, 800, 600);
		this.setLayout(null);
		
		// srcFile标签
		lblSrcFile = new JLabel("源文件");
		lblSrcFile.setBounds(10, 10, 80, 30);
		this.add(lblSrcFile);
		
		tfSrcFile = new JTextField();
		tfSrcFile.setBounds(60, 10, 600, 30);
		this.add(tfSrcFile);
		
		// destDir标签
		lblDestDir = new JLabel("目标目录");
		lblDestDir.setBounds(10, 80, 100, 30);
		this.add(lblDestDir);
		
		tfDestDir = new JTextField();
		tfDestDir.setBounds(60, 80, 600, 30);
		this.add(tfDestDir);
		
		this.setVisible(true);
	}
}
